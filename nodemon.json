{
    "verbose": false,
    "restartable": "rs",
    "colours": true,
    "ignore": [
      "backup",
      "docs",
      "src/app",
      "src/common",
      "static",
      "tools"
    ],
    "ext": "js json",
    "env": {
      "DEBUG":"boldr*"
    },
    "watch": [
      "src/server/**/*.js",
      "tools/webpack/"
    ],
    "exec": "babel-node -- src/server/index.js"
}
